<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}"
    android:id="@+id/mainlayout"
    android:background="#000000"
    android:focusableInTouchMode="false">

    <EditText
        android:id="@+id/mapName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        >
    </EditText>

    <ImageView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
    android:layout_weight="9"
    android:gravity="center"
	android:id="@+id/pictureEdit"
        android:layout_above="@+id/param2"
        android:layout_below="@+id/mapName"></ImageView>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="50dp"
        android:id="@+id/back_edit"
        android:background="@drawable/back_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/param1"
            android:layout_marginRight="85dp"
            android:layout_alignTop="@+id/back_edit"
            android:layout_toEndOf="@+id/back_edit" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/param2"
            android:layout_marginRight="85dp"
            android:layout_above="@+id/param1"
            android:layout_alignStart="@+id/param1" />

</RelativeLayout>
