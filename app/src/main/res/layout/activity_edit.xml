<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}"
    android:id="@+id/mainlayout"
    android:background="#000000"
    android:focusableInTouchMode="false">
    <EditText
        android:id="@+id/mapName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        >
    </EditText>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:layout_centerHorizontal="true"
        android:id="@+id/pictureEdit"
        android:layout_above="@+id/param1"
        android:layout_below="@+id/mapName"></ImageView>
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="50dp"
        android:id="@+id/back_edit"
        android:background="@drawable/back_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="2dp"
        android:id="@+id/eraser_edit"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text ="PrÃ©cision Filtre"
        android:id="@+id/textView2"
        android:layout_marginLeft="50dp"
        android:layout_alignBottom="@+id/param1"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="7dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/param1"
        android:layout_marginRight="30dp"

        android:layout_marginLeft="150dp"
        android:layout_above="@+id/back_edit"
        android:layout_alignEnd="@+id/gommeTexte"
        android:layout_marginEnd="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text ="Taille gomme"
        android:id="@+id/gommeTexte"
        android:layout_alignTop="@+id/sizing"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sizing"
        android:layout_marginStart="0dp"
        android:layout_alignTop="@+id/back_edit"
        android:layout_alignStart="@+id/param1"
        android:layout_marginRight="80dp" />

</RelativeLayout>
